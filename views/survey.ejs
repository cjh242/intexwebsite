                        <label><input type="radio" name="depressed" value="1" required> 1 </label>
                        <label><input type="radio" name="depressed" value="2" required> 2 </label>
                        <label><input type="radio" name="depressed" value="3" required> 3 </label>
                        <label><input type="radio" name="depressed" value="4" required> 4 </label>
                        <label><input type="radio" name="depressed" value="5" required> 5 </label>
                      </td>
                    </tr>
                    <tr>
