            <form action="/survey" method="POST" role="form" class="php-email-form">
              <div class="form-group mt-3">
                <label for="gender">Gender:</label>
                <select id="gender" name="gender" required>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                  <!-- Add more options as needed -->
                </select>
              </div>
              <div class="form-group mt-3">
                <label for="age">Select your age:</label>
                <select id="age" name="age" required>
                <!-- Generating options from 1 to 100 using JavaScript -->
                    <script>
                        for (let i = 1; i <= 100; i++) {
                            document.write(`<option value="${i}">${i}</option>`);
                        }
                    </script>
                </select>
              </div>
              <div class="form-group mt-3">
                <label for="relationship">Current Relationship Status:</label>
                <select id="relationship" name="relationship" required>
                  <option value="Single">Single</option>
                  <option value="In a relationship">In a relationship</option>
                  <option value="Married">Married</option>
                  <option value="Divorced">Divorced</option>
                  <!-- Add more options as needed -->
                </select>
              </div>
              <div class="form-group mt-3">
                <label for="occupation">Occupation Status:</label>
                <select id="occupation" name="occupation" required>
                  <option value="University Student">University Student</option>
                  <option value="High School Student">High School Student</option>
                  <option value="Salaried Worker">Salaried Worker</option>
                  <option value="Retired">Retired</option>
                  <!-- Add more options as needed -->
                </select>
              </div>
              <div class="form-group mt-3">
                <label for="socialMedia">What type of organizations are you affiliated with? </label>
                <label>
                    <input type="checkbox" name="affiliated" value="1"> University
                  </label>
                
                  <label>
                    <input type="checkbox" name="affiliated" value="2"> High School
                  </label>
                
                  <label>
                    <input type="checkbox" name="affiliated" value="4"> Company
                  </label>
                
                  <label>
                    <input type="checkbox" name="affiliated" value="5"> Government
                  </label>
                
                  <label>
                    <input type="checkbox" name="affiliated" value="3"> Private
                  </label>
                
                  <label>
                    <input type="checkbox" name="affiliated" value="6"> None
                  </label>
              </div>
              <div class="form-group mt-3">
            <label for="yesno">Do you use social media?: </label>
              <label>
                <input type="radio" name="yesno" value="Yes" required> Yes
            </label>
            <label>
                <input type="radio" name="yesno" value="No" required> No
            </label>
            </div>
              <div class="form-group mt-3">
                <label for="socialMedia">What Socail Media platforms do you use?</label>
                <label>
                    <input type="checkbox" name="socialMedia" value="5"> Discord
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="1"> Facebook
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="2"> Twitter
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="3"> Instagram
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="4"> Youtube
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="6"> Reddit
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="7"> Pinterest
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="8"> TikTok
                  </label>
                
                  <label>
                    <input type="checkbox" name="socialMedia" value="9"> Snapchat
                  </label>

                  <label>
                    <input type="checkbox" name="socialMedia" value="10"> None
                  </label>
              </div>
              <div class="form-group mt-3">

