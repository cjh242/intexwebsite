    <!-- ======= Edit Section ======= -->
    <section id="contact" class="contact">
      <div class="container position-relative" data-aos="fade-up">

        <div class="row gy-4 d-flex justify-content-center">

          <div class="col-lg-6" data-aos="fade-up" data-aos-delay="250">

            <!-- form to edit data in the database -->
            <form action="/edit" method="POST" role="form" class="php-email-form">
              <div class="row">
                <div class="col-md-6 form-group">
                  <input type="text" name="fname" class="form-control" id="fname" placeholder="Update First Name">
                </div>
                <div class="col-md-6 form-group">
                    <input type="text" name="lname" class="form-control" id="lname" placeholder="Update Last Name">
                  </div>
                  <div class="col-md-6 form-group">
                    <input type="text" name="username" class="form-control" id="username" placeholder="Update Username">
                  </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <input type="email" class="form-control" name="email" id="email" placeholder="Update Your Email">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input type="password" class="form-control" name="password" id="password" placeholder="New Password">
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input type="password" class="form-control" name="cpassword" id="cpassword" placeholder="Confirm New Password">
                </div>
              </div>
              <br>
              <br>
              <!-- button to submit the form -->
              <div class="text-center"><button type="submit">Save Changes</button></div>
            </form>

            <!-- ejs to tell user if user was correctly updated -->
            <% if (messages.error) { %>
                <p style="color: red;"><%= messages.error %></p>
            <% } else if (messages.success) { %>
                <p style="color: green;"><%= messages.success %></p>
            <% } %>

          </div><!-- End Edit Form -->

        </div>

      </div>
    </section><!-- End Edit Section -->

