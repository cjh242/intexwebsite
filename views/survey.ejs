                    <input type="radio" name="timeDuration" value="1-2 hours" required> 1-2 hours
                  </label>
                
                  <label>
                    <input type="radio" name="timeDuration" value="2-3 hours" required> 2-3 hours
                  </label>
                
                  <label>
                    <input type="radio" name="timeDuration" value="3-4 hours" required> 3-4 hours
                  </label>
                
                  <label>
                    <input type="radio" name="timeDuration" value="4-5 hours" required> 4-5 hours
                  </label>
                
